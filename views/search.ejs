<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<title>Casper María Rodríguez</title>
	<link rel="stylesheet" href="css/style.css">
	<link rel="stylesheet" href="css/friends.css">
</head>

<body>

	<!-- Header -->
	<div id="Facebluf-header">
		<div id="logo">
			<img src="img/Logo.png" alt="">
		</div>
		<div id="menu-right">
			<div id="menu">
				<a href="#">Perfil</a>
				<a href="#">Amigos</a>
				<a href="#">Preguntas</a>
				<a href="index.html">Desconectar</a>
			</div>
			<div id="usuario-banner">
				<img class="purple-circle" width="32" height="32" src="img/man.png" alt="">
				<div id="data-banner">
					<p>Casper María Rodríguez</p>
					<div id="banner-coins">
						<img width="15" height="15" src="img/coins.png" alt="">
						<span>50 puntos</span>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container-amigos">

		<h1>Resultados de búsqueda: "<%= resultado %>"</h1>

		<div id="solicitudes">

			<%
			
			if (friends) {
				friends.forEach(friend => { %>
					<div class="user-box">
						<img src="img/man.png" alt="">
						<h4><%= friend.nombre_completo %></h4>
						<form method="POST" id="" class="btn-solicitud" action="">
							<input value="Ver perfil" type="submit">
						</form>
					</div>
				<% });
			}
			
			%>

		</div>

	</div>

</body>

</html>
